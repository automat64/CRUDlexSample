{% include '@crud/fieldLabel.twig' with {
    field: field,
    definition: crudData.getDefinition()
} only %}
<select class="form-control" id="{{ field }}" name="{{ field }}">
    <option value=""></option>
    {% set values = crudData.getReferences(crudData.getDefinition().getReferenceTable(field), crudData.getDefinition().getReferenceNameField(field)) %}
    {% for id, value in values %}
        <option value="{{ id }}" {% if entity.get(field) and id == entity.get(field) %}selected="selected" {% endif %}>{{ value }}</option>
    {% endfor %}
</select>
