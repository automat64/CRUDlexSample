<label for="{{ field }}" class="control-label">
    {{ field }}
    {% set markers = [] %}
    {% if definition.isRequired(field) %}
        {% set markers = markers|merge(['*']) %}
    {% endif %}
    {% if definition.isUnique(field) %}
        {% set markers = markers|merge(['must be unique']) %}
    {% endif %}
    {{ markers|join(', ') }}
</label>
